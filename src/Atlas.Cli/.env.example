# ATLAS Trading Configuration
# Copy this file to .env and update with your Alpaca API credentials

# Get your API credentials from https://alpaca.markets/
# Use paper trading API credentials for safety
ALPACA_API_KEY=your-paper-api-key-here
ALPACA_SECRET_KEY=your-paper-secret-key-here
ALPACA_USE_PAPER=true

# Trading Rules - Customize your trading strategy
# All percentages are in decimal form (0.0001 = 0.0001%)

# Buy when stock price increases by this percentage
BUY_TRIGGER_PERCENT=0.0001

# Sell for profit when stock price increases by this percentage from entry
TAKE_PROFIT_PERCENT=0.0001

# Sell for loss when stock price decreases by this percentage from entry  
STOP_LOSS_PERCENT=1.0

# Maximum number of shares per position
MAX_POSITION_SIZE=100